{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist/types",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
